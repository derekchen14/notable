<header class="navbar navbar-fixed-top">
  <div class="navbar-inner" id="navbar-main">
    <div class="container">
      <%= link_to "NOTABLE v0.5", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li id="search_field">
              <%= form_tag note_search_path, method: :get, remote: true do %>
                <p>
                  <%= text_field_tag :query, params[:query] %>
                  <%= submit_tag "Search", name: nil %>
                </p>
              <% end %>
            </li>
          
            <% if current_user.admin? %>
              <li><%= link_to "Users", users_path %></li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" id="account_settings" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Notes", root_path, id: "user_notes" %></li>
                <li><%= link_to "Notebooks", notes_path, id: "user_notebooks" %></li>
                <li><%= link_to "Profile", current_user, id: "user_profile" %></li>
                <li><%= link_to "Help",    help_path, id: "help_page" %></li>
                <li><%= link_to "Settings", settings_path, id: "settings_page" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Help",    help_path %></li>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>

</header>
