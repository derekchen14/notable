<ul>
  <li>
    <ul>
      <% @tags.each do |tag| %>
        <li>
        <%= link_to tag.name, filter_tag_path(tag.name), remote: true %>
        </li>
      <% end %>
    </ul>
  </li>
  <div class="clear_filter">
    <p>Clear all tags</p>
    <%= link_to "OK", sort_by_path(criteria: cookies[:criteria] || "position"), remote: true %>
  </div>
</ul>

