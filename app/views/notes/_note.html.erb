<%# <% cache note do %>
  <%= content_tag_for :li, note do %>
    <span class="content"><%= best_in_place note, :content  %></span>

    <%= link_to "<i class='icon-tags'></i>".html_safe, load_tags_path(note), remote: true %>
    <span id=<%="tags_#{note.id}" %>>
    <%= raw note.tags.map(&:name).map { |t| link_to t, filter_tag_path(t), remote: true }.join(', ') %>
  </span>
    <div id=<%="note_#{note.id}_tags"%>></div>
   
    <span class="timestamp">
      Posted <%= time_ago_in_words(note.created_at) %> ago.
    </span>

    <% if current_user == note.user %>
      <%= link_to "<i class='icon-trash'></i>".html_safe, note, 
        method: :delete, data: { confirm: "You sure?" }, class: "trash", remote: true, title: "Trash" %>
      <%= link_to image_tag("reminder.png", alt: "reminder", size: "15x15"),'#', class: "remind", title: "Remind Me" %>

      <%= link_to image_tag("duplicate@2x.png", alt: "duplicate", 
                            size: "15x15"), note, method: :duplicate, class: "duplicate",
                            title: "Duplicate" %>

      <div class="handle"><span class="icon-resize-vertical"></span></div>
    <% end %>

    <% unless current_user.sendhub_id.nil? %>
      <div class="btn-group remind_times">
        <button class="badge badge-success">Right Now</button>
        <button class="badge badge-warning">30 Minutes</button>
        <button class="badge badge-important">In an Hour</button>
        <button class="badge badge-info">Later Today</button>
        <button class="badge badge-inverse">Tomorrow</button>
      </div>
    <% else %>
      <div class="remind_times"> 
        <%= form_for(current_user) do |f| %>  
          <%= render 'shared/error_messages', object: f.object  %>
          <%= f.label :phone_number, "Please add a phone number first:", class: "phone_instructions" %>
          <%= f.telephone_field :phone_number, class: "phone_input" %>
          <%= f.submit "Add", class: "btn btn-small btn-primary phone_submit" %>
        <% end %>
      </div>
    <% end %>

  <% end %>
<%# <% end %>
