<% if user_signed_in? %>
  <% provide(:title, current_user.username) %>
    <section>
      <div class="inline-left">
        <button id="simple-menu"> <i class="icon-align-justify"></i> </button>
      </div>
      <div class="inline-left"> <%= render 'shared/note_form' %> </div>
    </section>
    
    <div class="span8">
      <div id="sidr">
        <%= render 'features/taglist' %>
      </div>
      <div>
        <h3><%= current_user.username %>'s Notes</h3>
        <%= render 'shared/notebook' %>
      </div>
    </div>

<% else %>

	<div class="center hero-unit">
	  <h1>Welcome to Notable</h1>

	  <p>
	    This is the home page for the prequel app described in
	    <a href="http://productivityanywhere.com">Productivity Anywhere</a>.
	    It is a next generation note-taking tool that gives you a new way to organize your thoughts to make more effective decisions.
	  </p>

	  <%= link_to "Sign up now!", signup_path , class: "btn btn-large btn-primary" %>
	</div> 

	<div class="center">
	<%= link_to image_tag("flower.jpg", alt: "Flower"), '#' %>
	</div>
<% end %>
