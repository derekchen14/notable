<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
      	<%= render 'shared/note_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3><%= current_user.username %> Notes</h3>
      <%= render 'shared/notebook' %>
    </div>

  </div>  
<% else %>

	<div class="center hero-unit">
	  <h1>Welcome to Notable</h1>

	  <p>
	    This is the home page for the prequel app described in
	    <a href="http://productivityanywhere.com">Productivity Anywhere</a>.
	    It is a next generation note-taking tool that gives you a new way to view your notes so you can come up with best ideas.
	  </p>

	  <%= link_to "Sign up now!", signup_path , class: "btn btn-large btn-primary" %>
	</div> 

	<div class="center">
	<%= link_to image_tag("flower.jpg", alt: "Flower"), 'assets/flower.jpg' %>
	</div>
<% end %>