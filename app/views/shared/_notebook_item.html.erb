<li id="<%= notebook_item.id %>">
    <!--Add a checkbox here-->
  <span class="content"><%= notebook_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(notebook_item.created_at) %> ago.
  </span>
  <% if current_user?(notebook_item.user) %>
    <%= link_to "Mark Complete", notebook_item, method: :delete, 
    	data: { confirm: "You sure?" }, title: notebook_item.content %>
  <% end %>
</li>