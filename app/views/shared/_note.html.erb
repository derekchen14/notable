<li id="<%= note.id %>">
	<!--Add a checkbox here-->
  <span class="content"><%= note.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(note.created_at) %> ago.
  </span>

  <% if current_user?(note.user) %>
  <%= link_to "Mark Complete", note, method: :delete, 
  	data: { confirm: "You sure?" }%>
  <% end %>

  <%= link_to "Remind Me", '#', class: "btn pull-right remind" %>
</li>