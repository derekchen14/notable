<%= form_for(@note) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Make a new note..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  <%= f.submit "Text", class: "btn btn-large pull-right" %>
<% end %>